<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#5fb0c9"
    android:gravity="center_horizontal"
    android:orientation="vertical"
    android:theme="@style/MasterRecipesTheme"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/textView"
        android:layout_width="359dp"
        android:layout_height="76dp"
        android:layout_marginTop="50dp"
        android:gravity="center_horizontal"
        android:text="Master Recipes"
        android:textColor="@color/icons"
        android:textSize="50sp"
        app:fontFamily="@font/concert_one"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.117" />

    <com.airbnb.lottie.LottieAnimationView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:lottie_autoPlay="true"
        app:lottie_fileName="animation-w512-h512.json"
        app:lottie_imageAssetsFolder="assets"
        app:lottie_loop="true"
        app:lottie_colorFilter="@color/primary_dark"/>

    <Button
        android:id="@+id/btnIniciarSesion"
        android:layout_width="259dp"
        android:layout_height="wrap_content"
        android:backgroundTint="@color/accent"
        android:text="Iniciar sesiÃ³n"
        android:textColor="@android:color/background_light"
        android:textSize="25sp"
        tools:layout_editor_absoluteX="143dp"
        tools:layout_editor_absoluteY="341dp" />

    <Button
        android:id="@+id/btnRegistrar"
        android:layout_width="259dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:backgroundTint="@color/accent"
        android:text="Registrarse"
        android:textColor="@android:color/background_light"
        android:textSize="25sp"
        tools:layout_editor_absoluteX="143dp"
        tools:layout_editor_absoluteY="413dp" />

</LinearLayout>