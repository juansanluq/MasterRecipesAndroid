<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:tag="FragmentProfile"
    tools:context=".ProfileFragment">

    <android.support.v4.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#5fb0c9"
            android:gravity="center"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:background="@drawable/profile_background"
                android:orientation="vertical">

                <de.hdodenhof.circleimageview.CircleImageView
                    android:id="@+id/imgProfile"
                    android:layout_width="200dp"
                    android:layout_height="200dp"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="15dp"
                    android:contentDescription="@string/nav_header_desc"
                    android:paddingTop="@dimen/nav_header_vertical_spacing"
                    android:src="@mipmap/ic_launcher_round" />

                <TextView
                    android:id="@+id/txvNombre"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="Nombre"
                    android:textSize="30sp"
                    android:textStyle="bold"
                    app:fontFamily="@font/concert_one" />

                <TextView
                    android:id="@+id/txvApellidos"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="10dp"
                    android:gravity="center"
                    android:text="Apellidos"
                    android:textSize="30sp"
                    android:textStyle="bold"
                    app:fontFamily="@font/concert_one" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:background="@drawable/profile_background"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/asda"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:gravity="center"
                    android:text="Nombre de usuario:"
                    android:textColor="@color/accent"
                    android:textSize="30sp"
                    android:textStyle="bold"
                    app:fontFamily="@font/concert_one" />

                <TextView
                    android:id="@+id/txvUsername"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="10dp"
                    android:gravity="center"
                    android:textSize="20sp"
                    app:fontFamily="@font/concert_one" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:background="@drawable/profile_background"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/textView2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:gravity="center"
                    android:text="Email:"
                    android:textColor="@color/accent"
                    android:textSize="30sp"
                    android:textStyle="bold"
                    app:fontFamily="@font/concert_one" />

                <TextView
                    android:id="@+id/txvEmail"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="10dp"
                    android:gravity="center"
                    android:textSize="20sp"
                    app:fontFamily="@font/concert_one" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:background="@drawable/profile_background"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/txv"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:gravity="center"
                    android:text="Numero de teléfono:"
                    android:textColor="@color/accent"
                    android:textSize="30sp"
                    android:textStyle="bold"
                    app:fontFamily="@font/concert_one" />

                <TextView
                    android:id="@+id/txvNumeroTelefono"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="10dp"
                    android:gravity="center"
                    android:textSize="20sp"
                    app:fontFamily="@font/concert_one" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:background="@drawable/profile_background"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/txvs"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:gravity="center"
                    android:text="Fecha de nacimiento:"
                    android:textColor="@color/accent"
                    android:textSize="30sp"
                    android:textStyle="bold"
                    app:fontFamily="@font/concert_one" />

                <TextView
                    android:id="@+id/txvFechaNacimiento"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="10dp"
                    android:gravity="center"
                    android:textSize="20sp"
                    app:fontFamily="@font/concert_one" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:background="@drawable/profile_background"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/txvss"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:gravity="center"
                    android:text="Descripción:"
                    android:textColor="@color/accent"
                    android:textSize="30sp"
                    android:textStyle="bold"
                    app:fontFamily="@font/concert_one" />

                <TextView
                    android:id="@+id/txvComentarios"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="10dp"
                    android:gravity="center"
                    android:textSize="20sp"
                    app:fontFamily="@font/concert_one" />
            </LinearLayout>

            <Button
                android:id="@+id/btnCerrarSesion"
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="30dp"
                android:layout_marginTop="10dp"
                android:layout_marginRight="30dp"
                android:layout_marginBottom="30dp"
                android:background="@drawable/button_background"
                android:drawableRight="@drawable/ic_exit_to_app"
                android:paddingRight="20dp"
                android:text="Cerrar sesión"
                android:textColor="@android:color/white"
                android:textStyle="bold" />
        </LinearLayout>
    </android.support.v4.widget.NestedScrollView>

</FrameLayout>